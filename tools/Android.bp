python_test_host {
    name: "apex_compression_test",
    main: "apex_compression_test.py",
    srcs: [
        "apex_compression_test.py",
    ],
    data: [
        ":avbtool",
        ":com.android.example.apex",
        ":conv_apex_manifest",
        ":apex_compression_tool",
        ":deapexer",
        ":soong_zip",
    ],
    libs: [
        "apex_manifest_proto",
    ],
    test_suites: ["general-tests"],
    test_options: {
        unit_test: true,
    },
}

